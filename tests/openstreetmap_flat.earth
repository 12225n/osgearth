<!-- 
OpenStreetMap's Mapnik "Slippy Map" - Projected.
http://wiki.openstreetmap.org/wiki/Slippy_map_tilenames
-->

<map name="OpenStreetMap Projected Map">

    <options>
        <profile>spherical-mercator</profile>
        <terrain tile_size="2" morph_imagery="false" range_mode="PIXEL_SIZE_ON_SCREEN" tile_pixel_size="512"/>
    </options>
    
    <XYZImage name="osm_mapnik">
        <url>http://[abc].tile.openstreetmap.org/{z}/{x}/{y}.png</url>
        <profile>spherical-mercator</profile>
        <cache_policy usage="none"/>
    </XYZImage>

    <XYZFeatures name="data:osm-oceans">
        <url>http://readymap.org/readymap/mbtiles/osm-oceans/{z}/{x}/{-y}.pbf</url>
        <min_level>0</min_level>
        <max_level>9</max_level>
        <profile>spherical-mercator</profile>
        <format>pbf</format>
    </XYZFeatures>

    <FeatureImage name="Water" features="data:osm-oceans">
        <profile>spherical-mercator</profile>
        <styles>
            <style type="text/css">
                default {
                   fill: #ffbf6f;
                }
            </style>
        </styles>
    </FeatureImage>
    
    <xi:include href="viewpoints_flat.xml"/>
</map>
