<!--
osgEarth Sample
Demonstrates how to select a style name using javascript.
-->

<map name="Demo: scripted style selector">

    <GDALImage name="world">
        <url>../data/world.tif</url>
    </GDALImage>
    
    <OGRFeatures name="country-data">
        <url>../data/world.shp</url>
        <filters>
            <buffer distance="-0.05"/>
        </filters>
    </OGRFeatures>
    
    <FeatureModel name="countries" feature_source="country-data">        
        <styles>        
            <style type="text/css">
                p1 { fill: #ffff80; altitude-clamping: terrain-drape; }
                p2 { fill: #80ffff; altitude-clamping: terrain-drape; }
                p3 { fill: #ff80ff; altitude-clamping: terrain-drape; }
                p4 { fill: #ff8080; altitude-clamping: terrain-drape; }
                p5 { fill: #80ff80; altitude-clamping: terrain-drape; }
            </style>
            
            <script language="javascript">
              <![CDATA[
                function getStyleClass()
                {
                    var pop = parseInt(feature.properties.pop_cntry);
                    if      ( pop <= 14045470 )  return "p1";
                    else if ( pop <= 43410900 )  return "p2";
                    else if ( pop <= 97228750 )  return "p3";
                    else if ( pop <= 258833000 ) return "p4";
                    else                         return "p5";
                }
              ]]>
            </script>
            
            <selector class_expr="getStyleClass()"/>
        </styles>        
    </FeatureModel>
    
</map>
