<map name="ReadyMap.org">

	<TMSImage name="ReadyMap 15m Imagery">
		<url>http://readymap.org/readymap/tiles/1.0.0/7/</url>
	</TMSImage>

	 <TMSElevation name="ReadyMap 90m Elevation">
		 <url>http://readymap.org/readymap/tiles/1.0.0/116/</url>
		 <vdatum>egm96</vdatum>
	 </TMSElevation>

	 <XYZFeatures name="data:osm-oceans">
        <url>http://readymap.org/readymap/mbtiles/osm-oceans/{z}/{x}/{-y}.pbf</url>
        <min_level>0</min_level>
        <max_level>10</max_level>
        <profile>spherical-mercator</profile>
        <format>pbf</format>
    </XYZFeatures>

    <FeatureImage name="Water"
        features="data:osm-oceans">
		<profile>spherical-mercator</profile>
        <styles>
            <style type="text/css">
                default {
                   fill: #0000ff;
                }
            </style>
        </styles>
    </FeatureImage>

