<!--
osgEarth Sample
Demonstrates how to read feature data from a WFS server
-->

<map name="Demo: WFS Feature source">
        
    <GDALImage name="World imagery">
        <url>../data/world.tif</url>
    </GDALImage>
    
    <WFSFeatures name="states">
        <url>http://demo.boundlessgeo.com/geoserver/wfs</url>           
        <typename>topp:states</typename>
        <outputformat>json</outputformat>
    </WFSFeatures>
    
    <FeatureModel name="States" feature_source="states">
        <styles>        
            <style type="text/css">
                states {
                   stroke:            #ffff00;
                   stroke-opacity:    1.0;
                   stroke-width:      3.0;
                   altitude-clamping: terrain-drape;
                }                       
            </style>
        </styles>
    </FeatureModel>
    
    <FeatureModel name="Labels" feature_source="states">
        <styles>
            <style type="text/css">              
                names {
                    text-content: feature.properties.state_name;
                    text-align: center-center;
                    text-halo: #1f1f1f;
                }     
            </style>
        </styles>
    </FeatureModel>
</map>
