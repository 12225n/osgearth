#ifndef OSGEARTH_LAYER_H
#define OSGEARTH_LAYER_H

#include <osgEarth/Common>
#include <osgEarth/Config>
#include <osgEarth/Status>
#include <osgEarth/PluginLoader>
#include <osgEarth/Cache>
