<CompositeImage name="OSM Density Mask" visible="false" composite_function="less" min_level="11">
    <!-- <cache_policy usage="none"/> -->
    <layers>
        <FeatureImage name="OSM Water" sdf="true" max_data_level="18">
            <profile>spherical-mercator</profile>
            <features>data:osm-water</features>
            <styles>
                <style>
                    default {
                        render-sdf-min-distance: 0;
                        render-sdf-max-distance: 5;
                    }
                </style>
            </styles>
        </FeatureImage>
        
        <FeatureImage name="roads" min_level="15" max_data_level="18" sdf="true">
            <profile>spherical-mercator</profile>
            <features>data:osm</features>
            <filters>
                <script>("highway" in feature.properties);</script>
            </filters>
            <styles>
                <style type="text/css">
                    default {
                        render-sdf-min-distance: 5;
                        render-sdf-max-distance: 15;
                    }
                </style>
            </styles>
        </FeatureImage>  

        <FeatureImage name="buildings" min_level="16" max_data_level="18" sdf="true">
            <profile>spherical-mercator</profile>
            <features>data:osm</features>
            <filters>
                <script>("building" in feature.properties);</script>
            </filters>
            <styles>
                <style type="text/css">
                    default {
                        render-sdf-min-distance: 1;
                        render-sdf-max-distance: 2;
                    }
                </style>
            </styles>
        </FeatureImage>
        
    </layers>
</CompositeImage>