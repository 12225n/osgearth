<!--
FeatureImage - Rasterizes feature data into an Image layer.
-->

<Map name="Demo: Rasterization Example">

    <xi:include href="readymap_imagery.xml"/>

    <FeatureImage name="US States">
        <features>data:us-states</features>
        <styles>            
            <style type="text/css">
                default {
                    stroke:       #ffff00;
					stroke-width: 2km;
                }            
            </style>              
        </styles>        
    </FeatureImage>

    <FeatureImage name="Interstate Highways" min_level="3">
        <features>data:roads</features>        
        <styles>
            <style type="text/css">
                default {
                    stroke:            #ff6666ff;
                    stroke-width:      4km;
					stroke-min-pixels: 2;
                }            
            </style>
        </styles>

    </FeatureImage>


    <OGRFeatures name="data:us-states">
        <url>../data/usa.shp</url>
        <build_spatial_index>true</build_spatial_index>
    </OGRFeatures>

    <OGRFeatures name="data:roads">
        <url>../data/istates_dissolve.shp</url>
        <build_spatial_index>true</build_spatial_index>
    </OGRFeatures>
    
</Map>
